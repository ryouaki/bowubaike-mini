.container {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-flow: column;
}

.header {
  text-align: center;
  flex-shrink: 0;
  padding-bottom: 12rpx;
}

.header .title {
  font-size: 36rpx;
  font-weight: bold;
}

.header .tips {
  font-size: 20rpx;
  color: #6e6e6e;
}

.answers {
  flex: 1;
  background-color: #fff;
  position: relative;
}

.question {
  flex-shrink: 0;
  height: 120rpx;
  display: flex;
  padding: 18rpx 18rpx 0rpx 18rpx;
  box-sizing: border-box;
}

.question .hotkey {
  height: 84rpx;
  flex: 1;
  background-color: #fff;
  border-radius: 24rpx;
  box-sizing: border-box;
  margin-right: 24rpx;
  padding-left: 24rpx;
}

.question .submit {
  white-space: nowrap;
  font-size: 36rpx;
  background-color: #fff;
  box-sizing: border-box;
  line-height: 36rpx;
  text-align: center;
  padding: 24rpx 32rpx;
  height: 84rpx;
  border-radius: 24rpx;
}

.answers .history {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 12rpx;
  box-sizing: border-box;
}

.history .answer {
  margin-bottom: 24rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 18rpx;
}

.answer .title {
  padding: 24rpx 12rpx;
  background-color: #f9f9f9;
  border-top-left-radius: 9px;
  border-top-right-radius: 18rpx;
  border-bottom: 1rpx solid #e6e6e6;
  font-size: 36rpx;
  font-weight: bold;
}

.answer .content {
  font-size: 28rpx;
  padding: 12rpx;
  border-bottom-left-radius: 9px;
  border-bottom-right-radius: 18rpx;
  color: #3e3e3e;
}

.disabled {
  background-color: #9e9e9e !important;
}